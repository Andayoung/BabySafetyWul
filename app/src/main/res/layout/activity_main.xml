<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_title_height"
        android:background="#a3f5ed"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_activity_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="3dp"
            android:layout_centerVertical="true"
            android:text="@string/tracing_title"
            android:textColor="@color/blue"
            android:textSize="@dimen/activity_title_size" />

        <ImageView
            android:id="@+id/btn_fence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:background="@mipmap/icon_fence" />

        <ImageView
            android:id="@+id/btn_trace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/btn_fence"
            android:layout_margin="5dp"
            android:background="@mipmap/icon_track_query" />


    </RelativeLayout>


    <FrameLayout
        android:id="@+id/fry_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
</LinearLayout>
